<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Se te enviara un codigo de confirmacion por medio de WhatsApp no lo compartas con nadie"
            android:textColor="#000000"
            android:textStyle="italic" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textColorHint="#DDFF3D00">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_lada"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:inputType="textShortMessage|phone"

                android:ems="10"
                android:hint="Lada"
                android:minHeight="48dp"
                android:text="+52"
                android:textAlignment="center"
                android:textSize="16sp"
                tools:ignore="SpeakableTextPresentCheck" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textColorHint="#DDFF3D00">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_cel_olvide"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:inputType="textShortMessage|phone"

                android:ems="10"
                android:hint="Numero de telefono"
                android:minHeight="48dp"
                android:textAlignment="center"
                android:textSize="16sp"
                tools:ignore="SpeakableTextPresentCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_recuperar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:text="Recuperar Contraseña" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textColorHint="#DDFF3D00">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_code_olvide"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"

                android:ems="10"
                android:hint="Codigo de recuperacion mas tu numero de casa"
                android:inputType="textShortMessage"
                android:minHeight="48dp"
                android:textAlignment="center"
                android:textSize="16sp"
                android:visibility="gone"
                tools:ignore="SpeakableTextPresentCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_pass_olvide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#DA0202"
            android:textSize="16sp"
            android:textStyle="normal|bold"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_confirmar_olvide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Recuperar Contraseña"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>