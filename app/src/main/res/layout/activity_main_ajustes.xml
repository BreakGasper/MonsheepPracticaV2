<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1EEEE"
    tools:context=".Activitys.MainActivityAjustes">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iVuserSet"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:foreground="?android:attr/selectableItemBackground"
                app:srcCompat="@drawable/userajuste" />

            <ImageView
                android:id="@+id/iVTiendaSet"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:foreground="?android:attr/selectableItemBackground"
                app:srcCompat="@drawable/tiendaajuste" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/sV1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/marcolistview"
            tools:ignore="SpeakableTextPresentCheck">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="?attr/selectableItemBackground"
                    android:drawableBottom="@drawable/ic_baseline_add_photo_alternate_24"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:text="Clic en la imagen para Editar Foto\t\t"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textStyle="italic" />

                <ImageView
                    android:id="@+id/ivFotoEdit"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:background="?attr/selectableItemBackground"
                    android:foreground="?android:attr/selectableItemBackground"

                    app:srcCompat="@drawable/galeria"
                    tools:ignore="SpeakableTextPresentCheck" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColorHint="#DDFF3D00"
                    app:boxStrokeColor="#FF5722">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNombreEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_baseline_supervised_user_circle_24"
                        android:hint="Nombre"
                        android:inputType="textShortMessage"
                        android:textAlignment="center" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tILAP"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColorHint="#DDFF3D00"
                    app:boxStrokeColor="#FF5722">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etApellidoPaternoEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:drawableEnd="@drawable/ic_baseline_supervised_user_circle_24"
                        android:hint="Apellido Paterno"
                        android:inputType="textShortMessage"
                        android:textAlignment="center" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tILAM"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColorHint="#DDFF3D00"
                    app:boxStrokeColor="#FF5722">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etApellidoMaternoEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_baseline_supervised_user_circle_24"
                        android:hint="Apellido Materno"
                        android:inputType="textShortMessage"
                        android:textAlignment="center" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColorHint="#DDFF3D00"
                    app:boxStrokeColor="#FF5722">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCalleClienteEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:drawableEnd="@drawable/ic_baseline_horizontal_distribute_24"
                        android:hint="Calle"
                        android:inputType="textShortMessage"
                        android:textAlignment="center" />
                </com.google.android.material.textfield.TextInputLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="#DDFF3D00"
                            app:boxStrokeColor="#FF5722">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etNumeroClienteEdit"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:hint="No.#"
                                android:inputType="textShortMessage"
                                android:textAlignment="center"
                                tools:ignore="SpeakableTextPresentCheck" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="#DDFF3D00"
                            app:boxStrokeColor="#FF5722">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etInteriorEdit"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:hint="Interior #"
                                android:inputType="textShortMessage"
                                android:text="0"
                                android:textAlignment="center"
                                tools:ignore="SpeakableTextPresentCheck" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="#DDFF3D00"
                            app:boxStrokeColor="#FF5722">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etCpEdit"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:hint="C.P"
                                android:inputType="phone"
                                android:maxLength="5"
                                android:textAlignment="center"
                                tools:ignore="SpeakableTextPresentCheck" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </TableRow>

                </TableLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:textColorHint="#DDFF3D00"
                    app:boxStrokeColor="#FF5722">

                    s

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etColoniaEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_baseline_home_work_24"
                        android:hint="Colonia"
                        android:inputType="textShortMessage"
                        android:maxLength="50"
                        android:textAlignment="center" />
                </com.google.android.material.textfield.TextInputLayout>

                <Spinner
                    android:id="@+id/spTipoMunicipioEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:backgroundTint="#FD0000"
                    android:foreground="@drawable/degradado"
                    android:minHeight="48dp"
                    tools:ignore="SpeakableTextPresentCheck" />


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#DDFF3D00"
                    app:boxStrokeColor="#FF5722">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEstadoEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:drawableEnd="@drawable/ic_baseline_home_work_24"
                        android:enabled="false"
                        android:hint="Estado"
                        android:inputType="textShortMessage"
                        android:maxLength="50"
                        android:text="Jalisco"
                        android:textAlignment="center"
                        android:textColor="#000000" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/spinnercolors"
                    android:text="Tipo de Telefono"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spTipoTelefonoEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:backgroundTint="#FD0000"
                    android:foreground="@drawable/degradado"
                    android:minHeight="48dp"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColorHint="#DDFF3D00"
                            app:boxStrokeColor="#FF5722">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etLadaEdit"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:hint="Lada"
                                android:inputType="phone"
                                android:maxLength="3"
                                android:text="+52" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="#DDFF3D00"
                            app:boxStrokeColor="#FF5722">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etTelefonoEdit"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:drawableEnd="@drawable/ic_baseline_add_ic_call_24"
                                android:hint="Telefono"
                                android:inputType="phone"
                                android:maxLength="10" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </TableRow>

                </TableLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#DDFF3D00"
                    app:boxStrokeColor="#FF5722">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etContra"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:drawableEnd="@drawable/ic_baseline_password_24"
                        android:hint="Contraseña"
                        android:inputType="textPassword" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#DDFF3D00"
                    app:boxStrokeColor="#FF5722">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etRepContra"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:drawableEnd="@drawable/ic_baseline_password_24"
                        android:hint="Repetir Contraseña"
                        android:inputType="textPassword" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tILA"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColorHint="#DDFF3D00"
                    app:boxStrokeColor="#FF5722">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etAlias"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:drawableEnd="@drawable/ic_baseline_supervised_user_circle_24"
                        android:hint="Alias"
                        android:inputType="textShortMessage" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tILD"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#DDFF3D00"
                    app:boxStrokeColor="#FF5722">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etDescripcionEdit"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_margin="5dp"
                        android:backgroundTint="@color/white"
                        android:drawableEnd="@drawable/ic_baseline_description_24"
                        android:hint="Descripcion de tu negocio"
                        android:inputType="textShortMessage"
                        android:maxLength="500" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tILCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCorreoEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/degradado"
                        android:hint="Correo Electronico"
                        android:inputType="textShortMessage|textEmailAddress"
                        android:maxLength="100" />

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btnGuardarEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="5dp"
                    android:backgroundTint="#FF5722"
                    android:text="Guardar Cambios"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>


    </LinearLayout>

</RelativeLayout>