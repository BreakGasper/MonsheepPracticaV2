<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.MainActivityRegistroCategorias">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_foto"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/galeria"
            tools:ignore="SpeakableTextPresentCheck"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="?attr/selectableItemBackground"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilCategoria"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColorHint="#DDFF3D00">

            <EditText
                android:id="@+id/et_categoria"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"

                android:drawableEnd="@drawable/ic_baseline_space_dashboard_24"
                android:ems="10"
                android:hint="Categoria"
                android:inputType="textShortMessage|textLongMessage"
                android:maxLength="70"
                android:minHeight="48dp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:theme="@style/Animation.Design.BottomSheetDialog"
                tools:ignore="SpeakableTextPresentCheck" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilDescripcion"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColorHint="#DDFF3D00">

            <EditText
                android:id="@+id/et_descripcion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:drawableEnd="@drawable/ic_baseline_description_24"
                android:ems="10"
                android:hint="Descripcion"
                android:inputType="textShortMessage|textLongMessage"
                android:maxLength="150"
                android:minHeight="48dp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:theme="@style/Animation.Design.BottomSheetDialog"
                tools:ignore="SpeakableTextPresentCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_gd_catego"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#F4805B"
            android:text="Crear Categoria"

            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>