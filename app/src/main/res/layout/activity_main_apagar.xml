<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1EEEE"
    tools:context=".Activitys.MainActivityAPagar">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/marcolistview"
                android:text="Confirma tus Datos"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:textColorHint="#DDFF3D00">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNombreContactoPedido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre del Contacto" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:textColorHint="#DDFF3D00">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etContactoPedido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Numero del Contacto" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@color/white"
                android:textColorHint="#DDFF3D00">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDomicilioPedido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Domicilio" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="@color/white"
                    android:textColorHint="#DDFF3D00">>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCodigoPostalPedido"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:width="1dp"
                        android:hint="Codigo Postal" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="@color/white"
                    android:textColorHint="#DDFF3D00">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNumPedido"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:width="1dp"
                        android:hint="No." />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:textColorHint="#DDFF3D00">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etColoniaPedido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Colonia" />
            </com.google.android.material.textfield.TextInputLayout>

            <Spinner
                android:id="@+id/spTipoMunicipioCliente2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:backgroundTint="#FD0000"
                android:foreground="@drawable/degradado"
                android:minHeight="48dp"
                tools:ignore="SpeakableTextPresentCheck" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:textColorHint="#DDFF3D00">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etVecindarioPedido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Vecindario/Barrio"
                    android:inputType="textShortMessage" />
            </com.google.android.material.textfield.TextInputLayout>

            <CheckBox
                android:id="@+id/cbConfirmoDatos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/marcolistview"
                android:text="Confirmo que mis datos son verdaderos" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Terminos y condiciones de uso"
                android:textColor="#000000"
                android:textStyle="italic" />

            <Button
                android:id="@+id/button"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:onClick="ContinuarPedido"
                android:text="Confirmo mis datos" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>